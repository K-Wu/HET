(EDGEWISE, "msg") = EdgeLinear(input = (SRCNODE, "hs"), weight = (W_msg, EDGETYPE));
(EDGEWISE, "raw_attn_tmp1") = EdgeLinear(input = (SRCNODE, "hs_attn"), weight = (W_attn, EDGETYPE));
